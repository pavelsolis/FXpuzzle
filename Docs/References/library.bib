}
@article{BunKiviet:2003,
   abstract = {The relative magnitudes are compared of successive terms in a higher-order asymptotic expansion of the bias of the LSDV estimator in dynamic panels. We find that the leading term accounts for the major part of the actual bias in small samples. This implies that bias correction procedures can be based on relatively simple bias approximation formulas. © 2002 Elsevier Science B.V. All rights reserved.},
   author = {Maurice J.G. Bun and Jan F. Kiviet},
