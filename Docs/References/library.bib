@article{SarnoTsiakasUlloa:2016,
   abstract = {Understanding what drives international portfolio flows has important policy implications for countries wishing to exert some control on the size, direction and volatility of the flows. This paper empirically assesses the relative contribution of common (push) and country-specific (pull) factors to the variation of bond and equity flows from the US to 55 other countries. Using a Bayesian dynamic latent factor model, we find that more than 80\% of the variation in bond and equity flows is due to push factors from the US to other countries. Hence global economic forces seem to prevail over domestic economic forces in explaining movements in international portfolio flows. The dynamics of push and pull factors can be partially explained by US and foreign economic fundamentals.},
   author = {Lucio Sarno and Ilias Tsiakas and Barbara Ulloa},
   doi = {10.1016/j.jimonfin.2015.03.006},
   isbn = {0261-5606},
   issn = {02615606},
   journal = {Journal of International Money and Finance},
   keywords = {Dynamic factor model,International portfolio flows,Push and pull factors},
   note = {Objective: determine the contribution of push and pull factors to the variation of international bond and equity flows.<br/><br/>Big point: what drives international PORTFOLIO flows? what are their determinants<br/><br/>Big picture: capital flows have increase dramatically over the last two decades, they can have negative consequences on reciepient countries so countries need to be able to manage those flows, knowing their drives helps to design better policies to manage them.<br/><br/>Hypothesis: a dynamic latent factor model allows to determine what are the drivers of bond and equity flows, it decomposes the time variation of the flows into push and pull factors: &quot;the factor dynamics are captured by their serial correlation.&quot; p.60<br/><br/>Data: monthly bond and equity flows (they seem OUTFLOWS) from the U.S. to 55 countries, from January 1988 to November 2013.<br/><br/>Theories: standard economic fundamentals<br/><br/>Methodology: Bayesian dynamic latent MULTIFACTOR model (THREE types of latent persistent factors: global, asset-specific, country-specific) is flexible but high-dimensional (397 parameters to estimate), panel unit-root tests, time series to explain global factors, panel to explain the push factor.<br/><br/>Results: global (not domestic) factors are the primary drivers of international portfolio flows (explain more than 80\% of their variance - Table 2), little relative contribution of regional factors - Table 3. During the crisis &quot;the global component of the push factor increases its contribution.&quot; Economic variables explains 1/4 of the variation in the push and pull factors. The push factor is associated with U.S. economic variables (industrial gap, 10 yr yield, US/World stock return, dVIX, TED), and the pull factors by domestic ones (industrial gap, 10 yr yield, stock return, Chinn-Ito, lagged pull factor). <br/><br/>Conclusion: capital controls may be more effective than macroeconomic policies for managing capital flows.<br/><br/>Quotations: Explanations of Bayesian estimation, PCA, carry trade.<br/><br/>How this article influence my research: among recent papers using factor models to explain push/pull factors; this one saying that global factors are more important.<br/><br/>Instead of using TIC data I could use EPFR with weekly and monthly frequency, and then use quarterly BPM data following Forster et al. (2014) to see if frequency plays a role. Note also, the authors did not normalize the flows per GDP.},
   pages = {53-72},
   publisher = {Elsevier Ltd},
   title = {What Drives International Portfolio Flows?},
   volume = {60},
   url = {http://dx.doi.org/10.1016/j.jimonfin.2015.03.006},
   year = {2016},
}
@article{Samarina2016,
   abstract = {Since the 1990s, domestic bank credit has been reallocated away from lending to non-financial business and toward households. An expanding literature discusses negative effects on growth and stability of this change in credit allocation. We research its drivers. We hypothesize that if foreign capital flows into economies with few investment opportunities, it may substitute for domestic bank lending to non-financial business, so that bank balance sheets become more dominated by household lending. In GMM estimations on data for 36 economies over 1990-2011, we find evidence consistent with this mechanism. Foreign capital inflows into the non-bank sector (but not into the bank sector) are associated with lower shares of business lending in domestic bank portfolios. The association is weaker in economies with more investment opportunities, whether proxied by investment shares, current account surpluses, or EMU membership. Our results highlight the importance of sectoral destination in determining the effects of capital flows.},
