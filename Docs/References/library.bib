}
@article{Aastveit2017,
   abstract = {This paper shows that foreign aid has a significant positive average effect on real per capita gross domestic product (GDP) growth if, and only if, the quantitatively large negative reverse causal effect of per capita GDP growth on foreign aid is adjusted for in the growth regression. Instrumental variables estimates show that a 1 percentage point increase in GDP per capita growth decreased foreign aid by over 4\%. Adjusting for this quantitatively large, negative reverse causal effect of economic growth on foreign aid shows that a 1\% increase in foreign aid increased real per capita GDP growth by around 0.1 percentage points. Copyright},
