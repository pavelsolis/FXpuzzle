}
@article{RogersScottiWright:2014,
   abstract = {Summary: This paper examines the effects of unconventional monetary policy by the Federal Reserve, Bank of England, European Central Bank and Bank of Japan on bond yields, stock prices and exchange rates. We use common methodologies for the four central banks, with daily and intradaily asset price data. We emphasize the use of intradaily data to identify the causal effect of monetary policy surprises. We find that these policies are effective in easing financial conditions when policy rates are stuck at the zero lower bound, apparently largely by reducing term premia.},
